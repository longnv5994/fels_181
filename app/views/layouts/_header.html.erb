<header class="navbar navbar-fixed-top header_bar">
  <div class="container">
    <i><%= link_to t("header.title"), root_path, id: "logo", class:"fa fa-graduation-cap" %></i>
    <nav>
      <i>
        <ul class="nav navbar-nav navbar-right header_button">
          <li><%= link_to t("header.home"), root_path, class:"fa fa-home" %></li>
          <% if logged_in? %>
            <li><%= link_to t("category.categories"), categories_path, class:"fa fa-table" %></li>
            <li><%= link_to t("lesson.title"), lessons_path, class:"fa fa-leanpub" %>
            <li><%= link_to t("word.list_word"), words_path, class:"fa fa-list-ul" %>
            <li><%= link_to t("user"), users_path, class:"fa fa-users" %></li>
            <% if current_user.is_admin %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-cogs"></i>
                  <%= t "manager" %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to t("category.categories"), admin_categories_path, class:"fa fa-table" %>
                  </li>
                  <li>
                    <%= link_to t("word.manager_word"), admin_words_path, class:"fa fa-list-ul" %>
                  </li>
                </ul>
              </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-user"></i>
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user, class:"fa fa-file" %></li>
                <li><%= link_to t("setting"), edit_user_path(current_user), class:"fa fa-pencil" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout"), logout_path, method: "delete", class:"fa fa-sign-out" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("header.login"), login_path %></li>
          <% end %>
        </ul>
      </i>
    </nav>
  </div>
</header>
