<header class="navbar navbar-fixed-top header_bar">
  <div class="container">
    <%= link_to t("header.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right header_botton">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("category.categories"), categories_path %></li>
          <li><%= link_to t("lesson.title"), lessons_path %>
          <li><%= link_to t("word.list_word"), words_path %>
          <li><%= link_to t("user"), users_path %></li>
          <% if current_user.is_admin %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "manager" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("category.categories"), admin_categories_path %>
                </li>
                <li>
                  <%= link_to t("word.manager_word"), admin_words_path %>
                </li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
