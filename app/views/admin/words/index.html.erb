<% provide :title, t("word.all_word") %>
<div class="portlet grid grid-word">
  <div class="portlet-title center">
    <div class="caption">
      <span class="col-sm-3 col-sm-offset-1 title-list-word"><%= t "word.all_word_answer" %></span>
      <div class="grid-search col-sm-8 text-right">
        <%= form_tag admin_words_path, method: :get do %>
          <div class="col-sm-3 col-sm-offset-1 no-padding-right">
            <%= select_tag :search, options_from_collection_for_select(@categories,
            "id", "name", params[:search]),
            {include_blank: t("all_categories"), class:"form-control", onchange: "this.form.submit();"} %>
          </div>
          <div class="col-md-3 col-sm-offset-1">
            <%= link_to t("word.add"), new_admin_word_path, class: "btn btn-primary button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="list-word">
      <ul>
        <%= render "word" %>
      </ul>
    </div>
  </div>
</div>
