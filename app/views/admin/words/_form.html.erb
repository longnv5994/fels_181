<div class="body_content">
  <%= form_for [:admin, @word] do |f| %>
    <%= render "/shared/error_messages", object: f.object %>
    <div class="col-md-12">
      <div class="col-md-4 col-md-offset-2">
        <div>
          <% if @categories.present? %>
            <label><%= t "category.categories" %></label>
            <%= f.select "category_id",
              options_for_select(@categories.collect {|category| [category.name, category.id]},
              {selected: f.object.category_id}), {include_blank: t("none")}, class: "form-control" %>
          <% end %>
        </div>
        <div>
          <%= f.label :word %>
          <%= f.text_area :content, placeholder: t("word.text_add"), rows: 4,
            required: "required", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="col-md-10 form-group">
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-4 col-md-offset-2">
                <label><%= t "word_answer.answers" %></label>
              </div>
              <div class="col-md-4 col-md-offset-1">
                <%= link_to_add_fields raw("#{t "word_answer.new_answer"}
                  <i class='fa fa-plus-square fa-lg' aria-hidden='true'></i>"),
                  f, :word_answers %>
              </div>
            </div>
          </div>
          <div class="row">
            <%= f.fields_for :word_answers do |builder| %>
              <%= render "word_answer_fields", f: builder %>
            <% end %>
            <div class="new_answer">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12 btn-add-word">
      <div class="col-md-2 col-md-offset-5">
        <%= f.submit (yield :button_text), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
