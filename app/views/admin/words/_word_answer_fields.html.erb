<div class="row item-new-word">
  <div class="form-group answer_field">
    <div class="col-md-7">
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.check_box :is_correct, class: "radio_answer" %>
    </div>
    <div class="col-md-2">
      <%= link_to_remove_fields raw("<span class='glyphicon glyphicon-trash text-danger'></span>"), f %>
    </div>
  </div>
</div>
