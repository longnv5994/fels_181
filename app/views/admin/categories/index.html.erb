<% provide :title, t("category.add_title") %>
<% provide(:button_text, t("category.btn_add")) %>
<div class="col-sm-4 no-padding-left">
  <section class="category_form">
    <%= render "category_form" %>
  </section>
</div>

<div class="col-sm-8 no-padding-right">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t "ord" %></th>
        <th><%= t "title" %></th>
        <th><%= t "created" %></th>
        <th><%= t "function" %></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td class="text-center"><%= index+1 %></td>
          <td><p><%= category.name %></p></td>
          <td><%= l category.created_at, format: :long %></td>
          <td class="text-center">
            <%= link_to edit_admin_category_path(category),
              title: t("category.edit"), class: "underline" do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to [:admin, category], method: :delete, title: t("category.delete"),
              class: "underline text-danger", data: {confirm: t("sure")} do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="wrap-paging fix-paging"><%= will_paginate %></div>
</div>
