<% provide :title, t("word.list_word") %>
<div class="portlet grid grid-word">
  <div class="portlet-title">
    <div class="caption">
      <span class="col-sm-2 title-list-word"><%= t "word.list_word"%></span>
      <div class="grid-search col-sm-10 text-right">
        <%= form_tag admin_words_path, method: :get do %>
          <div class="col-sm-2 no-padding-right">
            <%= text_field(:para,:txtkeyword, placeholder: t("keyword"),
              class: "form-control txtkeyword") %>
          </div>
          <div class="col-sm-3 no-padding-right">
            <%= select_tag :cate, options_from_collection_for_select(@categories,
              "id", "name", params[:search]),
              include_blank: t("all"), class: "form-control" %>
          </div>
          <div class="col-sm-2 chk-learn">
            <%= radio_button("rd", "learn", "learned") %>
            <%= label_tag "name", t("learned"), class: "small" %>
          </div>
          <div class="col-sm-2 chk-learn">
            <%= radio_button("rd", "learn", "unlearned") %>
            <%= label_tag "name", t("unlearned"), class: "small" %>
          </div>
          <div class="col-sm-1 chk-learn">
            <%= radio_button("rd", "learn", "showall", checked: true) %>
            <%= label_tag "name", t("all"), class: "small" %>
          </div>
          <div class="col-sm-2">
            <%= button_tag "search", class: "btn btn-primary btn100per",
              type: "button", id: "btnsearch", data: {url: get_words_path} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="portlet-body filter-lesson">
    <div class="grid-content" id="grid-content"></div>
  </div>
</div>
