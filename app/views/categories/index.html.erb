<% provide :title, t("category.show_title") %>
<div class="col-sm-12 no-padding-right">
  <table class="table table-striped table-bordered table-hover text-center">
    <thead>
      <tr>
        <th><%= t "ord" %></th>
        <th><%= t "title" %></th>
        <th><%= t "category.num_word" %></th>
        <th><%= t "created" %></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><p><%= category.name %></p></td>
          <td><%= category.words.size %></td>
          <td><%= l category.created_at, format: :long %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="wrap-paging fix-paging"><%= will_paginate %></div>
</div>
